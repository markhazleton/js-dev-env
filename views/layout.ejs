<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="<%= typeof pageDescription !== 'undefined' ? pageDescription : 'A simple CMS built with Bootstrap 5 and EJS' %>"
    />
    <title><%= title %> | My Website</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/fonts/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css"
    />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
  </head>
  <body class="flex-layout">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/"
          ><i class="bi bi-house"></i> My Website</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if (typeof pages !== 'undefined' && pages.length > 0) { %> <%
            pages.forEach(function(page) { %>
            <li class="nav-item">
              <a
                class="nav-link <%= (page.url === currentPath) ? 'active' : '' %>"
                href="<%= page.url %>"
                aria-current="<%= (page.url === currentPath) ? 'page' : 'false' %>"
              >
                <%= page.title %>
              </a>
            </li>
            <% }); %> <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main content area -->
    <main class="container my-5 pt-3 pb-5 flex-main">
      <% if (typeof content !== 'undefined' && !content.useCustomTemplate) { %>
        <h1 class="mb-4"><%- content.heading %></h1>
        <p class="lead"><%- content.text %></p>
        <div class="content-body"><%- content.body %></div>
      <% } else { %> 
        <%- body %> 
      <% } %>
    </main>

    <!-- Footer -->
    <footer class="footer py-3 bg-light mt-auto">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <span class="text-muted"
              >Â© <%= new Date().getFullYear() %> My Website. All rights
              reserved.</span
            >
          </div>
          <div class="col-md-6 text-md-end">
            <a href="https://github.com/markhazleton" class="text-muted me-2"
              ><i class="bi bi-github"></i
            ></a>
            <a
              href="https://www.linkedin.com/in/markhazleton/"
              class="text-muted"
              ><i class="bi bi-linkedin"></i
            ></a>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Just before the closing body tag -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
    <script src="/js/component-library.js"></script>
  </body>
</html>
