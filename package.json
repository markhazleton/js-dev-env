{
  "name": "js-dev-env",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build-css": "sass --load-path=node_modules scss/main.scss docs/css/styles.css",
    "build-css-dev": "sass --load-path=node_modules scss/main.scss public/css/styles.css",
    "watch-css": "sass --watch --load-path=node_modules scss/main.scss:public/css/styles.css",
    "copy-icons": "node tools/build/copy-icons.js",
    "copy-icons-docs": "node tools/build/copy-icons.js --target=docs",
    "copy-static-assets": "node tools/build/copy-static-assets.js",
    "generate-static-site": "node tools/build/generate-static-site.js",
    "start:dev": "npm-run-all copy-icons build-css-dev --parallel watch-css dev",
    "prebuild": "npm run clean",
    "build": "node tools/build/build.js",
    "build:github-pages": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "security-audit": "node tools/maintenance/security-audit.js",
    "security:validate": "npm run security-audit",
    "dev:setup": "node tools/maintenance/dev-helper.js setup",
    "dev:clean": "node tools/maintenance/dev-helper.js clean",
    "dev:test": "node tools/maintenance/dev-helper.js test",
    "dev:deploy": "node tools/maintenance/dev-helper.js deploy",
    "docker:build": "docker build -t js-dev-env .",
    "docker:run": "docker run -p 3000:3000 js-dev-env",
    "docker:dev": "docker-compose up --build",
    "setup:minimal": "node tools/maintenance/minimal-setup.js",
    "analyze:deps": "node tools/maintenance/optimize-dependencies.js",
    "optimize:deps": "node tools/maintenance/optimize-dependencies.js --generate-minimal",
    "test:deps": "node tools/maintenance/test-dependencies.js",
    "configure": "node tools/maintenance/configure-project.js",
    "quickstart": "echo 'ðŸš€ Quick Start Guide:' && echo '1. npm install' && echo '2. npm run start:dev' && echo '3. Open http://localhost:3000' && echo '4. Edit data/pages.json for content' && echo '5. Edit scss/main.scss for styling'",
    "help": "echo 'ðŸ“š Available Commands:' && echo 'npm run quickstart - Get started quickly' && echo 'npm run configure - Interactive configuration wizard' && echo 'npm run setup:minimal - Create minimal setup' && echo 'npm run analyze:deps - Analyze dependencies' && echo 'npm run optimize:deps - Generate minimal package.json' && echo 'npm run start:dev - Development server' && echo 'npm run build - Build for production' && echo 'npm run test - Run tests' && echo 'npm run docker:dev - Run with Docker'",
    "build:pug": "node tools/build/build.js --pug",
    "build:scss": "node tools/build/build.js --scss",
    "clean": "node tools/build/clean.js",
    "start": "npm run build && node tools/build/start.js",
    "seo:audit": "node tools/seo/seo-validation-report.js",
    "audit:seo": "node tools/seo/seo-a11y-checks.mjs",
    "audit:ssl": "tsx tools/seo/ssl-expiry.ts",
    "audit:all": "npm run audit:seo && npm run audit:ssl",
    "report:monthly": "node tools/maintenance/report-monthly.mjs",
    "report:git": "node tools/git/report-git-simple.mjs",
    "fix:auto": "node tools/maintenance/apply-autofixes.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@parcel/watcher": "^2.5.1",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "compression": "^1.8.1",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "validator": "^13.15.15"
  }
}
